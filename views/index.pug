extends layout

block content
  h1= title
  p Welcome to the Public Library 

  form(method="get") 
    input(type="text", value=search, name="q", placeholder="Search a book...")
    button(type="submit") Search 

  p
    
    a.button(href="/books/new") Create New Book
  table
   thead 
     tr 
       th Title 
       th Author 
       th Genre 
       th Year 
   tbody
     each book in books
       tr 
         td 
           a(href="/books/ + book.id") #{book.title}
         td #{book.author}
         td #{book.genre}
         td #{book.year}  
         