extends layout

block content

h1 Update Book
form(action="/books/update-book/" + book.id, method="post")
  p 
    label(for="title") Title 
    input(name="title" type="text" id="title" value="The Hunger Games")
  p
    label(for="author") Author 
    input( name="author" type="text" id="author" value="Suzanne Collins")
  p
    label(for="genre") Genre 
    input( name="genre" type="text" id="genre" value="Fantasy")
  p
    label(for="year") Year 
    input( name="year" type="text" id="year" value="2008")
  p 
    input(type="submit", value="Update Book")  

form(action="/books/8/delete", method="post" onsubmit="return confirm('Do you really want to delete this book?');")      
  p
    a(class="button" href="/books") Cancel   
  p 
    input(type="submit", value="Delete Book")



  












